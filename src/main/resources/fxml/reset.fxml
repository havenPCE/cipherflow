<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ResetController">
    <Text fill="#534d4d" layoutX="334.0" layoutY="54.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="Reset Password">
        <font>
            <Font name="Segoe UI Bold" size="18.0"/>
        </font>
    </Text>
    <TextField fx:id="uidField" alignment="CENTER" layoutX="89.0" layoutY="97.0" prefHeight="32.0" prefWidth="350.0"
               promptText="User ID" styleClass="defaultInput" stylesheets="@../styles/login.css">
        <font>
            <Font size="14.0"/>
        </font>
    </TextField>
    <Button id="confirmButton" layoutX="452.0" layoutY="97.0" mnemonicParsing="false" onAction="#confirmID"
            prefHeight="31.0" prefWidth="125.0" stylesheets="@../styles/login.css" text="CONFIRM">
        <font>
            <Font name="Segoe UI Bold" size="12.0"/>
        </font>
    </Button>
    <Button id="resetButton" layoutX="586.0" layoutY="97.0" mnemonicParsing="false" onAction="#resetID"
            prefHeight="31.0" prefWidth="125.0" stylesheets="@../styles/login.css" text="RESET">
        <font>
            <Font name="Segoe UI Bold" size="12.0"/>
        </font>
    </Button>
    <AnchorPane fx:id="content" layoutX="89.0" layoutY="170.0" prefHeight="277.0" prefWidth="622.0"
                style="-fx-border-color: #DDDDDD;" visible="false">
        <Text fill="#4b4b4b" layoutX="263.0" layoutY="39.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="New Password">
            <font>
                <Font name="Segoe UI Bold" size="14.0"/>
            </font>
        </Text>
        <Text fill="#4b4b4b" layoutX="251.0" layoutY="134.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Confirm Password">
            <font>
                <Font name="Segoe UI Bold" size="14.0"/>
            </font>
        </Text>
        <PasswordField fx:id="passField" alignment="CENTER" layoutX="86.0" layoutY="67.0" prefHeight="30.0"
                       prefWidth="450.0" promptText="********" styleClass="defaultInput"
                       stylesheets="@../styles/login.css">
            <font>
                <Font name="Segoe UI" size="14.0"/>
            </font>
        </PasswordField>
        <PasswordField fx:id="cPassField" alignment="CENTER" layoutX="86.0" layoutY="156.0" prefHeight="30.0"
                       prefWidth="450.0" promptText="********" styleClass="defaultInput"
                       stylesheets="@../styles/login.css">
            <font>
                <Font name="Segoe UI" size="14.0"/>
            </font>
        </PasswordField>
        <Button id="proceedButton" layoutX="86.0" layoutY="217.0" mnemonicParsing="false" onAction="#proceed"
                prefHeight="30.0" prefWidth="450.0" stylesheets="@../styles/login.css" text="PROCEED">
            <font>
                <Font name="Segoe UI Bold" size="14.0"/>
            </font>
        </Button>
    </AnchorPane>
    <Button layoutX="34.0" layoutY="28.0" mnemonicParsing="false" onAction="#goToLogin"
            style="-fx-background-color: #FFFFFF;">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/arrow-left.jpg"/>
            </ImageView>
        </graphic>
    </Button>
</AnchorPane>
